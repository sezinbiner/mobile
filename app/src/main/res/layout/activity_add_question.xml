<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddQuestionActivity">

    <EditText
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:hint="Soruyu Giriniz" />

    <EditText
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionText"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:hint="Şıkkı Giriniz" />

    <EditText
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:hint="Şıkkı Giriniz" />


    <EditText
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:hint="Şıkkı Giriniz" />


    <EditText
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:hint="Şıkkı Giriniz" />


    <EditText
        android:id="@+id/e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:hint="Şıkkı Giriniz" />

    <TextView
        android:id="@+id/cevap_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cevabı Seçiniz"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/e"/>

    <Spinner
        android:id="@+id/dropdown"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/cevap_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnSaveQuestion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/e"
        android:layout_marginLeft="175dp"
        android:textColor="@color/white"
        android:layout_marginTop="43dp"
        android:background="@drawable/custom_button"
        android:text="Soruyu Kaydet" />


</RelativeLayout>
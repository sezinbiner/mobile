<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateQuestionActivity">

    <EditText
        android:id="@+id/update_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:hint="Soruyu Giriniz" />

    <EditText
        android:id="@+id/update_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_question"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:hint="Şıkkı Giriniz" />

    <EditText
        android:id="@+id/update_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_a"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:hint="Şıkkı Giriniz" />


    <EditText
        android:id="@+id/update_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_b"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:hint="Şıkkı Giriniz" />


    <EditText
        android:id="@+id/update_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_c"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:hint="Şıkkı Giriniz" />


    <EditText
        android:id="@+id/update_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_d"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:hint="Şıkkı Giriniz" />

    <TextView
        android:id="@+id/cevap_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cevabı Seçiniz"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/update_e"/>


    <Spinner
        android:id="@+id/update_dropdown"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/cevap_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/updateBtnSaveQuestion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_e"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:text="Soruyu Guncelle" />

    <Button
        android:id="@+id/btnDeleteQuestion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateBtnSaveQuestion"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:text="Soruyu Sil" />


</RelativeLayout>
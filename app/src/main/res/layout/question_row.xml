<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/question_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/a_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_txt"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/b_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/a_txt"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/c_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/b_txt"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/d_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/c_txt"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/e_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/d_txt"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="TextView" />


            <TextView
                android:id="@+id/answer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/e_txt"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="TextView" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_below="@id/answer_txt"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="GÃ¼ncelle/Sil" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>